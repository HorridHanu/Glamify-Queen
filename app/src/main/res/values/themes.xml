<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.GlamifyQueen" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">#29B6F6</item>

        <item name="android:colorSecondary">@color/pink</item>
        <item name="colorOnSecondary">#D4E157</item>
        <item name="colorSecondaryVariant">#66BB6A</item>

        <!-- status bar color-->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item> <!-- for dark icons -->


        <!-- Pointer color-->
        <item name="colorControlActivated">@color/text_hint</item>

        <!-- Progress Bar color-->
        <item name="android:indeterminateTint">@color/primary</item>
    </style>


    <style name="textAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@font/regular</item>
        <item name="android:textSize">0sp</item>
    </style>

    <style name="customEditText" parent="Widget.AppCompat.EditText">
        <item name="hintTextColor">@color/text_hint</item>
        <item name="background">@drawable/input_background</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:padding">@dimen/_14sdp</item>
        <item name="android:drawablePadding">@dimen/_7sdp</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="headingText" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/extra_bold</item>
        <item name="android:textSize">@dimen/_29ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="descText" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/desc</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="linkText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/_8sdp</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="fontFamily">@font/bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">@dimen/_12sdp</item>
    </style>

    <style name="Theme.GlamifyQueen" parent="Base.Theme.GlamifyQueen" />
</resources>